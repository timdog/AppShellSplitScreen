<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppShellSplitScreen.ViewModel"
             x:Class="AppShellSplitScreen.View.NewPage3"
             x:DataType="vm:NewPage3ViewModel"
             Title="NewPage3">
    <VerticalStackLayout Spacing="20">
        <Label Text="{Binding Text}" VerticalOptions="Center" HorizontalOptions="Center" />
        <Button Text="BACK" Command="{Binding NavigateBackCommand}" />
        <Button Text="Update Static View" Command="{Binding UpdateStaticMessageCommand}" />
    </VerticalStackLayout>
</ContentPage>