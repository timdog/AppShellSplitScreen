<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppShellSplitScreen.View.StaticPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AppShellSplitScreen.ViewModel"
    x:DataType="vm:StaticPageViewModel"
    Title="StaticPage">
    <StackLayout
        Grid.Row="1"
        BackgroundColor="Blue"
        HorizontalOptions="Fill">
        <Label
            FontSize="18"
            HorizontalOptions="CenterAndExpand"
            Text="{Binding Text}"
            TextColor="White"
            VerticalOptions="CenterAndExpand" />
    </StackLayout>
</ContentPage>